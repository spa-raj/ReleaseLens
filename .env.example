# ReleaseLens Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Never commit .env files with real secrets!

# =============================================================================
# LLM Provider Configuration (Choose one)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
# Alternative: ANTHROPIC_API_KEY=your-anthropic-key-here

# =============================================================================
# GitHub App Configuration (Required for webhook functionality)
# =============================================================================
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYour-GitHub-App-Private-Key-Here\n-----END RSA PRIVATE KEY-----"
GITHUB_INSTALLATION_ID=12345678
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# Arize Configuration (Required for observability)
# =============================================================================
ARIZE_API_KEY=your-arize-api-key-here
ARIZE_SPACE_KEY=your-arize-space-key-here
ARIZE_PROJECT_NAME=releaselens-mvp

# =============================================================================
# Qdrant Vector Database Configuration
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for local deployment, required for cloud

# =============================================================================
# Application Configuration
# =============================================================================
RUNS_DIR=./runs
LOG_LEVEL=INFO
MAX_CONCURRENT_JOBS=5

# Job Queue Configuration (Redis/Celery)
BROKER_URL=redis://localhost:6379/0
RESULT_BACKEND=redis://localhost:6379/0

# Database Configuration (if needed for persistence)
DATABASE_URL=sqlite:///./releaselens.db

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-for-jwt-signing
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Feature Flags (Control functionality during development)
# =============================================================================
ENABLE_PR_CREATION=false  # Set to true when ready for automated PRs
ENABLE_VECTOR_SEARCH=true
ENABLE_JAVA_SUPPORT=false  # MVP focuses on Python first
ENABLE_DEBUG_MODE=false

# =============================================================================
# External Service Configuration
# =============================================================================
# Rate limiting for external APIs
GITHUB_API_RATE_LIMIT=5000  # requests per hour
PYPI_API_RATE_LIMIT=1000    # requests per hour

# Timeouts (in seconds)
LLM_TIMEOUT=60
REGISTRY_TIMEOUT=30
CI_TIMEOUT=300

# =============================================================================
# Development & Testing Configuration
# =============================================================================
ENVIRONMENT=development  # development, staging, production
TESTING=false
MOCK_EXTERNAL_APIS=false  # Use for testing without real API calls

# Logging Configuration
LOG_FORMAT=json  # json or text
LOG_FILE=logs/releaselens.log

# =============================================================================
# Performance Configuration
# =============================================================================
WORKER_CONCURRENCY=4
MAX_REPO_SIZE_MB=500
CACHE_TTL_SECONDS=3600